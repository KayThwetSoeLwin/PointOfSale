@model PointOfSale.Shared.ViewModels.PaginationModel

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="@Model.ActionName" asp-route-pageNumber="@(Model.PageNumber - 1)">«</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == 1 || i == Model.TotalPages || (i >= Model.PageNumber - 2 && i <= Model.PageNumber + 2))
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="@Model.ActionName" asp-route-pageNumber="@i">@i</a>
                    </li>
                }
                else if ((i == 2 && Model.PageNumber > 4) || (i == Model.TotalPages - 1 && Model.PageNumber < Model.TotalPages - 3))
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="@Model.ActionName" asp-route-pageNumber="@(Model.PageNumber + 1)">»</a>
                </li>
            }
        </ul>
    </nav>
}
