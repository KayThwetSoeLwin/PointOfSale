@model PointOfSale.Shared.DTOs.ProductDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete Product";
}

<h2>🗑️ Confirm Delete</h2>

<h4>Are you sure you want to delete this product?</h4>

<div class="border p-3">
    <dl class="row">
        <dt class="col-sm-2">Product Code</dt>
        <dd class="col-sm-10">@Model.ProductCode</dd>

        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Stock Quantity</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>
    </dl>

    <form asp-action="Delete" asp-route-code="@Model.ProductCode" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
