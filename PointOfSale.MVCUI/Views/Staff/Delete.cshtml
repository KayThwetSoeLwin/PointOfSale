@model PointOfSale.Shared.DTOs.StaffDto

@{
    ViewData["Title"] = "Delete Staff";
}

<h2>🗑️ Delete Staff</h2>

<h4>Are you sure you want to delete this staff member?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Designation</dt>
        <dd class="col-sm-10">@Model.Designation</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StaffId" />
        <button type="submit" class="btn btn-danger">🗑️ Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
